{
  "manifest_version": 3,
  "name": "Rickrollify",
  "version": "3",

  "description": "An extension that grants you a 1% chance of injecting Rick Astley on every new page load.",

  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "exclude_matches": ["https://www.youtube.com/watch?v=dQw4w9WgXcQ"], 
      "js": ["background.js"]
    }
  ],

  "icons": {
    "32": "icons/32x32.png",
    "128": "icons/128x128.png"
  },

  "homepage_url": "https://github.com/qua3k/Rickrollify"

}
