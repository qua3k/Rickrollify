{
  "manifest_version": 3,
  "name": "Rickrollify",
  "version": "3.0.1",

  "description": "An extension that grants you a 1% chance of injecting Rick Astley on every new page load.",
  "icons": { "32": "icons/32x32.png",
             "128": "icons/128x128.png" },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["https://www.youtube.com/watch?v=dQw4w9WgXcQ"], 
      "js": ["background.js"]
    }
  ],
  
  "content_security_policy": "default-src 'self'"
}
